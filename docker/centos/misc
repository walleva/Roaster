# syntax=docker/dockerfile:experimental

FROM docker.codingcafe.org/sandbox/centos:stage-util

ARG LABEL_BUILD_ID=Undefined
LABEL BUILD_ID=$LABEL_BUILD_ID

COPY [".", "/etc/roaster/scripts"]

RUN --mount=type=cache,id=ccache,target=/root/.ccache /etc/roaster/scripts/setup.sh catch2 jsoncpp rapidjson simdjson pybind grpc libpng libgdiplus mkl-dnn halide opencv leveldb rocksdb lmdb utf8proc
